{
	"image": "cimg/node:20.19.4-browsers",
	"features": {
		"ghcr.io/devcontainers-extra/features/angular-cli:2": {},
		"ghcr.io/kreemer/features/chrometesting:1": {}
	},
	"postStartCommand": "npm install && npx ng build shared && ./scripts/install-webdriverio-extension.sh",
	"customizations": {
		"vscode": {
			"extensions": [
				"esbenp.prettier-vscode",
				"manishgowardipe.test-runner",
				"GitHub.copilot-chat",
				"GitHub.vscode-github-actions",
				"Angular.ng-template",
				"bierner.markdown-mermaid"
			]
		}
	},
	"containerEnv": {
		"CHROME_BIN": "/usr/local/bin/chrome",
		"CI": "true",
		"HEADLESS": "true"
	}
}