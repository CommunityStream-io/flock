# Multi-stage Dockerfile for E2E Testing with robust base image
FROM node:24.5.0-alpine AS base

# Install system dependencies including Chrome
RUN apk add --no-cache \
    chromium \
    git \
    curl \
    bash \
    python3 \
    make \
    g++ \
    && rm -rf /var/cache/apk/*


# Accept build argument for package token
ARG PACKAGE_TOKEN
ENV PACKAGE_TOKEN=$PACKAGE_TOKEN

# Copy package files for dependency installation
COPY package*.json ./
COPY .npmrc ./

# Install all dependencies (including devDependencies for Angular dev server)
RUN npm ci --no-audit --no-fund --legacy-peer-deps

# Copy source code
COPY . .

# Build the shared library (required for the app)
RUN npm run build:shared

# Create directories for logs and results
RUN mkdir -p logs/metrics logs/servers logs/shards logs/exits allure-results

# Set environment variables for testing
ENV NODE_ENV=test
ENV HEADLESS=true
ENV CI=true
ENV TIMEOUT_TELEMETRY=true

# Ensure node_modules/.bin is in PATH
ENV PATH="/node_modules/.bin:${PATH}"

# Expose port for Angular dev server
EXPOSE 4200