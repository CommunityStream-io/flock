# =============================================================================
# Sauce Labs Integration Environment Variables
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env files to version control

# =============================================================================
# Sauce Labs Configuration
# =============================================================================
# Get these from your Sauce Labs account dashboard
SAUCE_USERNAME=your_sauce_username
SAUCE_ACCESS_KEY=your_sauce_access_key

# Sauce Labs region (us or eu)
SAUCE_REGION=us

# Build name for test organization (will be auto-generated if not set)
BUILD_NAME=flock-e2e-tests

# Tunnel identifier for localhost testing (will be auto-generated if not set)
TUNNEL_IDENTIFIER=your_tunnel_id

# =============================================================================
# Test Configuration
# =============================================================================
# Test specification pattern (default: all feature files)
TEST_SPEC=./features/**/**.feature

# Cucumber tags for selective test execution
TEST_TAGS=

# Debug mode for verbose output
DEBUG_TESTS=false

# CI environment flag
CI=false

# =============================================================================
# Application Configuration
# =============================================================================
# Base URL for the application under test
BASE_URL=http://localhost:4200

# Application port
PORT=4200

# =============================================================================
# Sauce Labs Advanced Options
# =============================================================================
# Enable video recording for passing tests (costs more)
SAUCE_VIDEO_UPLOAD_ON_PASS=false

# Enable extended debugging (costs more)
SAUCE_EXTENDED_DEBUGGING=true

# Enable performance capture (costs more)
SAUCE_CAPTURE_PERFORMANCE=false

# Selenium version to use
SAUCE_SELENIUM_VERSION=4.15.0

# =============================================================================
# Test Execution Options
# =============================================================================
# Maximum number of parallel test instances
MAX_INSTANCES=10

# Test timeout in milliseconds
TEST_TIMEOUT=60000

# Wait timeout in milliseconds
WAIT_TIMEOUT=10000

# Connection retry timeout in milliseconds
CONNECTION_RETRY_TIMEOUT=120000

# Connection retry count
CONNECTION_RETRY_COUNT=3

# =============================================================================
# Reporting Configuration
# =============================================================================
# Allure results directory
ALLURE_RESULTS_DIR=./allure-results

# Enable Allure reporting
ALLURE_ENABLED=true

# =============================================================================
# Development vs Production
# =============================================================================
# Set to 'development' for local development
# Set to 'production' for CI/CD environments
NODE_ENV=development

# =============================================================================
# Example Usage
# =============================================================================
# 1. Copy this file: cp env.example .env
# 2. Edit .env with your actual Sauce Labs credentials
# 3. Run tests: npm run test:e2e:sauce
#
# For CI/CD, set these as environment variables in your CI system:
# - SAUCE_USERNAME
# - SAUCE_ACCESS_KEY
# - SAUCE_REGION
# - BUILD_NAME
# - TUNNEL_IDENTIFIER
